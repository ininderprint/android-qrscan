{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
    "typeRoots": [
      "./node_modules/@types",
      "./typings/",
      "./static.d.ts"
    ]
  },
  "exclude": ["babel.config.js", "metro.config.js", "jest.config.js"]
}
